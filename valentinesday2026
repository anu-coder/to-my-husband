        <h1>Will you be my Valentine? ðŸŒ¹</h1>
        
        <div class="btn-container">
            <button id="yesBtn">Yes</button>
            <button id="noBtn">No</button>
        </div>
    </div>

    <div id="success-message">
        <div class="gif-container">
            <img src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExZnd6Znd6Znd6Znd6Znd6Znd6Znd6Znd6Znd6Znd6Znd6JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1z/T86lxK3qP7x8O0NfXq/giphy.gif" alt="Happy Bear">
        </div>
        <h1>Knew you would say yes! ðŸŽ‰</h1>
        <p style="font-size: 1.5rem; color: #d32f2f;">You just made me the happiest person!</p>
    </div>

    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const questionScreen = document.getElementById('question-screen');
        const successMessage = document.getElementById('success-message');

        // Messages to show when they click "No"
        const noTexts = [
            "Are you sure?",
            "Really sure??",
            "Pookie please...",
            "Just think about it!",
            "If you say no, I will be very sad...",
            "I will be very very very sad...",
            "Ok fine, I will stop asking...",
            "Just kidding, say yes please! â¤ï¸"
        ];
        
        let clickCount = 0;

        noBtn.addEventListener('click', () => {
            clickCount++;
            
            // Change the text of the No button
            if (clickCount < noTexts.length) {
                noBtn.innerText = noTexts[clickCount];
            }

            // Make the Yes button grow!
            const currentSize = parseFloat(window.getComputedStyle(yesBtn).fontSize);
            const currentPadding = parseFloat(window.getComputedStyle(yesBtn).paddingTop);
            
            yesBtn.style.fontSize = `${currentSize * 1.5}px`;
            yesBtn.style.padding = `${currentPadding * 1.5}px ${currentPadding * 3}px`;
        });

        yesBtn.addEventListener('click', () => {
            questionScreen.style.display = 'none';
            successMessage.style.display = 'block';
        });
    </script>
